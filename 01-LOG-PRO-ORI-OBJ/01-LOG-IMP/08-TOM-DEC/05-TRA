	leia(verdadeiro)
	se (verdadeiro) então
		
		escreva("cabe apenas uma pessoa?")
		leia(verdadeiro)
		se (verdadeiro) então
			
			escreva("é pesado?")
			leia(verdadeiro)
			se (verdadeiro) então				
				
